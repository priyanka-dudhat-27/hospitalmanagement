<%-include ('header')%>

<!-- MAIN CONTENT-->
<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header"><strong>Add Service Details</strong></div>
            <div class="card-body card-block">
              <form
                action="/admin/services/edit_services/<%=servicesData.id%>"
                method="post"
                enctype="multipart/form-data"
                class="form-horizontal"
              >
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="text-input" class="form-control-label"
                      >Title</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <input
                      type="text"
                      name="title"
                      value="<%=servicesData.title%>"
                      id="text-input"
                      placeholder="Enter Title"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="textarea-input" class="form-control-label"
                      >Content</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <textarea
                      name="message"
                      id="textarea-input"
                      placeholder="Message"
                      class="form-control"
                    ><%=servicesData.message%></textarea>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="file-input" class="form-control-label"
                      >Image</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <input
                      type="file"
                      id="file-input"
                      name="image"
                      class="form-control-file"
                    />
                    <img src="<%=servicesData.image%>" width="200px" class="mt-3" alt="">
                  </div>
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                  </button>
                  <a href="/admin/services/edit_services" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                  </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <%-include ('footer')%>
    </div>
  </div>
</div>
