<%-include ('header')%>

<!-- MAIN CONTENT-->
<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header"><strong>Add Admin Details</strong></div>
            <div class="card-body card-block">

                <% var fullName=adminData.name.split(' ')%>

              <form
                action="/admin/edit_admin/<%=adminData.id%>"
                method="post"
                enctype="multipart/form-data"
                class="form-horizontal"
              >
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="text-input" class="form-control-label"
                      >First Name</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <input
                      type="text"
                      name="fname"
                      value="<%=fullName[0]%>"
                      id="text-input"
                      placeholder="Enter First Name"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="text-input" class="form-control-label"
                      >Last Name</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <input
                      type="text"
                      name="lname"
                      value="<%=fullName[1]%>"
                      id="text-input"
                      placeholder="Enter Last Name"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="email-input" class="form-control-label"
                      >Email</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <input
                      type="email"
                      name="email"
                      value="<%=adminData.email%>"
                      id="email-input"
                      placeholder="Please enter your email"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                      <label for="password-input" class="form-control-label"
                        >Phone No</label
                      >
                    </div>
                    <div class="col-12 col-md-9">
                      <input
                        type="number"
                        name="phone"
                        value="<%=adminData.phone%>"
                        placeholder="Enter contact Number"
                        class="form-control"
                      />
                    </div>
                  </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="textarea-input" class="form-control-label"
                      >Message</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <textarea
                      name="message"
                      id="textarea-input"
                      placeholder="Message"
                      class="form-control "
                    >
                    <%=adminData.message%>
                </textarea>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="select" class="form-control-label">City</label>
                  </div>

                  <%var city=['surat','vadodara','mumbai','rajkot','navsari']%>
                  <div class="col-12 col-md-9">
                    <select name="city" id="select"  class="form-control">
                      <option value="">--select-city-</option>
                      <%city.map((v,i)=>{%>
                        <option value="<%=v%>" <% if(adminData.city==v){%><%='selected'%><%}%>><%=v%></option>
                      <%})%>
                    </select>
                  </div>
                </div>

                <div class="row form-group">
                  <div class="col col-md-3">
                    <label class="form-control-label">Gender</label>
                  </div>
                  <div class="col col-md-9">
                    <div class="form-check">
                      <div class="radio">
                        <label for="radio1" class="form-check-label">
                            <input type="radio" id="inline-radio1" name="gender" value="male" class="form-check-input" <% if(adminData.gender=='male'){%><%='checked'%><%}%>>Male
                        </label>
                      </div>
                      <div class="radio">
                        <label for="radio2" class="form-check-label">
                            <input type="radio" id="inline-radio2" name="gender" value="female" class="form-check-input"<% if(adminData.gender=='female'){%><%='checked'%><%}%>>Female
                        </label>
                      </div>
                      <div class="radio">
                        <label for="radio3" class="form-check-label">
                            <input type="radio" id="inline-radio3" name="gender" value="others" class="form-check-input"<% if(adminData.gender=='others'){%><%='checked'%><%}%>>Others
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row form-group">
                  <div class="col col-md-3">
                    <label for="file-input" class="form-control-label"
                      >Image</label
                    >
                  </div>
                  <div class="col-12 col-md-9">
                    <input
                      type="file"
                      id="file-input"
                      name="image"
                      class="form-control-file"
                    />
                    <img src="<%=adminData.image%>" alt="">
                  </div>
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                  </button>
                  <button type="reset" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <%-include ('footer')%>
    </div>
  </div>
</div>
