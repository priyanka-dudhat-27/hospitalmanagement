                  <div class="row">
      <div class="col-lg-12 mb-5">
          <div class="single-blog-item">
              <img src="<%=postsData.postsimage%>" alt="" class="img-fluid">
  
              <div class="blog-item-content mt-5">
                  <div class="blog-item-meta mb-3">
                      <span class="text-muted text-capitalize mr-3"><i class="icofont-comment mr-2"></i><%=commentData.length%> Comments</span>
                      <span class="text-black text-capitalize mr-3"><i class="icofont-calendar mr-2"></i><%=postsData.created_date%></span>
                  </div> 
  
                  <h2 class="mb-4 text-md"><a href="blog-single.html"><%=postsData.title%></a></h2>
                  
                  <p><%=postsData.description%></p>
              </div>
          </div>
          <a href="/about" class="text-danger">Back</a>
      </div>
      <div class="col-lg-12">
          <div class="comment-area mt-4 mb-5">
              <h4 class="mb-4"><%=commentData.length%> Comments</h4>
              <ul class="comment-tree list-unstyled">
               
                 <%commentData.map((v,i)=>{%>
                        <li>
                            <div class="comment-area-box">
                                <div class="comment-thumb float-left">
                                    <img alt="" src="<%=v.commentImage%>" width="100px" height="100px" class="img-fluid">
                                </div>
                                <div class="comment-info">
                                    <h5 class="mb-1 text-capitalize"><%=v.name%></h5>
                                    <span class="date-comm"><%=v.created_date%></span>
                                </div>
                                <div class="comment-content mt-3">
                                    <p><%=v.message%></p>
                                </div>
                            </div>
                        </li>
                 <%})%>
              </ul>
          </div>
      </div>
  
  
      <div class="col-lg-12">
          <form class="comment-form my-5" id="comment-form" action="/add_comment" method="post" enctype="multipart/form-data">
              <h4 class="mb-4">Write a comment</h4>
              <div class="row">
                  <div class="col-md-6">
                      <div class="form-group">
                          <input class="form-control" type="text" name="name" id="name" placeholder="Name:">
                      </div>
                  </div>
                  <div class="col-md-6">
                      <div class="form-group">
                          <input class="form-control" type="text" name="email" id="mail" placeholder="Email:">
                      </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                        <input class="form-control" type="file" name="commentImage" id="commentImage">
                    </div>
                </div>
              </div>
  
  
              <textarea class="form-control mb-4" name="message" id="comment" cols="30" rows="5" placeholder="Comment"></textarea>
  
              <input class="btn btn-main-2 btn-round-full" type="submit" name="submit-contact" id="submit_contact" value="Submit Message">
          </form>
      </div>
                  </div>
              </div>
